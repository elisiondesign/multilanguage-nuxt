{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@@/*": [
        "./*"
      ],
      "@types": [
        "./@types/*"
      ]
    },
    // "typeRoots": ["./node_modules", "./@types"],
    "types": [
      "@nuxt/vue-app",
      "@types/jest",
      "@types/node",
      "@types/webpack-env",
      // "nuxt-types",
      // "vue-types",
      // "multilanguage-nuxt"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx",
    "@types/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./@types"
  ]
}
