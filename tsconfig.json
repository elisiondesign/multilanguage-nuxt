{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "..",
    "esModuleInterop": true,
    "types": [
      "@nuxt/vue-app",
      "@types/jest",
      "@types/node",
      "@types/webpack-env",
      "./types"
    ],

    "paths": {
      "~/*": ["./*"],
      "~": ["./"],
      "~types": ["../../types"]
    }
  },
}
