{
  "extends": "@nuxt/typescript",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "typeRoots": ["node_modules", "@types"],
    "types": [
      "@nuxt/vue-app",
      "@types/jest",
      "@types/node",
      "@types/webpack-env",
      "nuxt-types",
      "vue-types",
      "multilanguage-nuxt"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx",
    "@types/**/*.ts",
  ],

}
